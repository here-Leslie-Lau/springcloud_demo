<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leslie.springcloud_demo.mapper.PaymentMapper">
    <insert id="add" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payments (serial) values (#{serial})
    </insert>

    <select id="getById" parameterType="Long" resultType="Payment">
        select * from payments where id = #{id}
    </select>
</mapper>